{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "es5", "es2015", "es2016", "es2017"],
    "outDir": "dist",
    "jsx": "react",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist/**/*"]
}
